let g:airline_powerline_fonts = 1

filetype plugin indent on
set ttymouse=xterm
set nocp

set gdefault

" set sexy colorscheme
colorscheme Tomorrow-Night

" don't need to have .jsx for jsx to be applied
let g:jsx_ext_required = 0

" haskell-vim-now sets this option to 1, i don't like that :) 
let NERDTreeQuitOnOpen = 0
